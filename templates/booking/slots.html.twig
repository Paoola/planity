{% if auto %}
    {% set changeDate = "{{ path('saloon_manage_slot_new_auto', {'saloon': saloon.id}) }}" %}
    {% set form = 'saloon_private_booking_form' %}
{% else %}
    {% set changeDate = "{{ path('saloon_public', {'saloon': price.saloon.slug}) }}" %}
    {% set form = 'saloon_public_booking_form' %}
{% endif %}

{#<div class="col-12">#}

<div class="container">
    {% for slot in slots %}
        {% set minute = slot|date('i') %}

        {% if minute is divisible by(60) %}

            {% if slot|date('d/m/Y') == "now"|date('d/m/Y') %}

                {% if slot|date('H:i') > "now"|date('H:i') %}
                    <div class="col-sm-6 col-md-3 my-2">
                        <a class="text-light"
                           href="{{ path(form, {'price': price.id, 'slot_ts': slot.timestamp, 'worker': worker.id}) }}">{{ slot|date('H:i') }}</a>
                    </div>
                {% endif %}

            {% else %}
                <div class="col-sm-6 col-md-3 my-2">
                    <a class="text-light"
                       href="{{ path(form, {'price': price.id, 'slot_ts': slot.timestamp, 'worker': worker.id }) }}">{{ slot|date('H:i') }}</a>
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
</div>

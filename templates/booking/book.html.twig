{% extends "layout.html.twig" %}

{% block title %}{{ saloon.name }}{% endblock %}

{% block body %}
    {% set date = null %}

    <div data-online-payment="{{ saloon.onlinePayment }}" id="js-book" class="row my-4">
        <div class="col-lg-8 col-md-12 col-sm-12 offset-lg-2 text-center">
            <div class="jumbotron">
                <h2>Confirmez le rendez-vous</h2>
                <p>
                    Rendez-vous le <b>{{ slot.start|date('d/m/Y') }}</b> à <b>{{ slot.start|date('H:i') }}</b><br>
                    avec <b>{{ slot.worker.firstname|capitalize }} {{ slot.worker.lastname|capitalize }}</b><br>
                    à l'adresse <b>{{ slot.saloon.location }}</b>
                </p>
                <h1>Détails de votre commande</h1>
                <p>Votre commande</p>

                {#<p>Total: {{ price.amount }}euros</p>#}

                {#<h2>Vous avez déjà utilisé Lana Beauty ?  </h2>#}

                {#<form action="{{ path('login') }}" id="formLogin" method="post">#}
                    {#<label for="username"></label>#}
                    {#<input type="text" id="username" name="_username"/>#}
                    {#<label for="password"></label>#}
                    {#<input type="password" id="password" name="_password" />#}
                    {#<button type="submit" id="submit">login</button>#}
                {#</form>#}
                {#<div id="server-results"><!-- For server results --></div>#}

                {#<h2>Pour qui faites vous la réservation ? </h2>#}
                {{ form_start(form, {'attr': {'id': 'payment-form'}}) }}

                {{ form_row(form.name) }}

                {{ form_row(form.phoneNumber) }}

                {{ form_row(form.email) }}

                <button type="button" id="payment_active" class="payment_choose btn btn-secondary my-3 col-5">Je paye en ligne</button>

                <div class="col-12" id="or">
                    <p class="text-center my-1">ou</p>
                </div>

                <button type="button" id="payment_disable" class="payment_choose btn btn-secondary my-3 col-5">Je paye lors du rendez-vous</button>

                <div class="form-group">
                    <div class="stripe">
                        <div id="card-element"></div>
                        <div id="card-errors" role="alert"></div>
                        <br>
                    </div>
                </div>

                <input type="submit" value="Confirmer" class="btn btn-primary" id="button_confirm"/>

                {{ form_end(form) }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script
            src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="{{ asset('build/bookingForm.js') }}"></script>
    <script type="text/javascript">
        // le js qui va écouter le submit
        $("#formLogin").submit(function(event){
            event.preventDefault(); //prevent default action
            var post_url = $(this).attr("action"); //get form action url
            var request_method = $(this).attr("method"); //get form GET/POST method
            var form_data = $(this).serialize(); //Encode form elements for submission

            $.ajax({
                url : post_url,
                type: request_method,
                data : form_data
            }).done(function(response){ //
                location.reload(response)
            });
        });
        // prevent on submit (annule l ecall)
        // ajax form
    </script>
    {% if saloon.onlinePayment %}
        <script>
            // Create a Stripe client.
            var stripe = Stripe('{{ pk_stripe }}');
            var elements = stripe.elements();
            var style = {
                base: {
                    color: '#32325d',
                    lineHeight: '18px',
                    fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
                    fontSmoothing: 'antialiased',
                    fontSize: '16px',
                    '::placeholder': {
                        color: '#aab7c4'
                    }
                },
                invalid: {
                    color: '#fa755a',
                    iconColor: '#fa755a'
                }
            };

            var card = elements.create('card', {style: style, 'hidePostalCode': true});
            card.mount('#card-element');

            card.addEventListener('change', function(event) {
                var displayError = document.getElementById('card-errors');
                if (event.error) {
                    displayError.textContent = event.error.message;
                } else {
                    displayError.textContent = '';
                }
            });

            // Handle form submission.
            var form = document.getElementById('payment-form');
            form.addEventListener('submit', function(event) {
                event.preventDefault();

                if (document.querySelector('button.payment_choose.btn-success').id == 'payment_active') {
                    stripe.createToken(card).then(function(result) {
                        if (result.error) {
                            var errorElement = document.getElementById('card-errors');
                            errorElement.textContent = result.error.message;
                        } else {
                            stripeTokenHandler(result.token);
                        }
                    });
                } else {
                    form.submit();
                }
            });

            function stripeTokenHandler(token) {
                var form = document.getElementById('payment-form');
                var hiddenInput = document.createElement('input');
                hiddenInput.setAttribute('type', 'hidden');
                hiddenInput.setAttribute('name', 'stripeToken');
                hiddenInput.setAttribute('value', token.id);
                form.appendChild(hiddenInput);
                form.submit();
            }
        </script>
    {% endif %}
{% endblock %}

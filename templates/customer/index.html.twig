{% set page_id = 10 %}
{% extends "layout.html.twig" %}

{% block title %}Mes clients | {{ parent() }}{% endblock %}

{% block body %}

    <div class="row justify-content-center">

        {% include 'saloon/menu.html.twig' %}

        <div class="col-10 my-3">

            <h1 class="text-center">Mes clients</h1>

            <div class="row">
                <div class="col-12 col-sm-12 col-lg-6">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for slot in slots %}
                                <tr>
                                    <th scope="row">{{ slot.customer.email }}</th>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="col-12 col-sm-12 col-lg-6">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th scope="col">Téléphone</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for slot in slots %}
                                <tr>
                                    <th scope="row">{{ slot.customer.phoneNumber }}</th>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}